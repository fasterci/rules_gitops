load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "fasttemplate",
    srcs = ["template.go"],
    importpath = "github.com/fasterci/rules_gitops/templating/fasttemplate",
    visibility = ["//visibility:public"],
)

go_test(
    name = "fasttemplate_test",
    srcs = [
        "example_test.go",
        "template_test.go",
    ],
    embed = [":fasttemplate"],
)

alias(
    name = "go_default_library",
    actual = ":fasttemplate",
    visibility = ["//visibility:public"],
)
